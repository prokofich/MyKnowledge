<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image_doska_new"
    tools:context=".view.fragments.studentFragments.StudentMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:id="@+id/id_menu_teachers_cs_1"
        android:background="@drawable/background_cs_menu_white"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="МЕНЮ"
            android:id="@+id/id_menu_teacher_tv_title_1"
            android:textSize="27sp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10sp"
            style="@style/ButtonStyleOrange"
            android:text="настройки"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:id="@+id/id_menu_teacher_button_settings"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/id_menu_teachers_cs_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_menu_teacher_cs_2"
            app:layout_constraintBottom_toTopOf="@id/id_menu_teacher_cs_3"
            android:background="@drawable/background_tv_account"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_menu_teacher_button_my_account"
                android:text="профиль"
                style="@style/ButtonStyleOrange"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/id_menu_teacher_tv_my_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="здесь вы можете настроить свой профиль"
                app:layout_constraintStart_toEndOf="@id/id_menu_teacher_button_my_account"
                android:id="@+id/id_menu_teacher_tv_my_account"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_menu_teacher_cs_3"
            app:layout_constraintBottom_toTopOf="@id/id_menu_teacher_cs_4"
            android:background="@drawable/background_tv_account"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_menu_teacher_cs_2">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_menu_teacher_button_table"
                style="@style/ButtonStyleOrange"
                android:text="расписание"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_menu_teacher_tv_table"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:text="здесь вы можете настроить свое расписание"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/id_menu_teacher_tv_table"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintEnd_toStartOf="@id/id_menu_teacher_button_table"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_menu_teacher_cs_4"
            android:background="@drawable/background_tv_account"
            app:layout_constraintBottom_toTopOf="@id/id_menu_teacher_cs_5"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_menu_teacher_cs_3">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_menu_teacher_button_my_students"
                style="@style/ButtonStyleOrange"
                android:text="учителя"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/id_menu_teacher_tv_my_students"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="здесь вы можете посмотреть своих учеников"
                app:layout_constraintStart_toEndOf="@id/id_menu_teacher_button_my_students"
                android:id="@+id/id_menu_teacher_tv_my_students"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_menu_teacher_cs_5"
            android:background="@drawable/background_tv_account"
            app:layout_constraintBottom_toTopOf="@id/id_menu_teacher_cs_6"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_menu_teacher_cs_4">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_menu_teacher_button_my_requests"
                style="@style/ButtonStyleOrange"
                android:text="мои заявки"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/id_menu_teacher_tv_my_requests"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="здесь вы можете следить за отправленными заявками"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/id_menu_teacher_tv_my_requests"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintEnd_toStartOf="@id/id_menu_teacher_button_my_requests"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/id_menu_teacher_cs_6"
            android:background="@drawable/background_tv_account"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_menu_teacher_cs_5">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_menu_teacher_button_search"
                style="@style/ButtonStyleOrange"
                android:text="поиск"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/id_menu_teacher_tv_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.7"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="здесь вы можете найти всех учеников и учителей"
                app:layout_constraintStart_toEndOf="@id/id_menu_teacher_button_search"
                android:id="@+id/id_menu_teacher_tv_search"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>