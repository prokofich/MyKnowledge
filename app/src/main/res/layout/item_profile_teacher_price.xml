<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tv_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_tv_1"
            android:id="@+id/id_item_price_cs_1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Название дисциплины:"
                android:id="@+id/id_item_profile_teacher_price_tv_title_name"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/id_item_profile_teacher_price_tv_title_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/id_item_profile_teacher_price_tv_title_name"
                android:text="Цена(руб/час):"
                android:id="@+id/id_item_profile_teacher_price_tv_title_price"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/id_item_profile_teacher_price_et_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColorHint="#313331"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/id_item_price_cs_1"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/id_item_profile_teacher_price_et_price"/>

        <EditText
            android:id="@+id/id_item_profile_teacher_price_et_price"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColorHint="#313331"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/id_item_price_cs_1"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintStart_toEndOf="@id/id_item_profile_teacher_price_et_name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/id_item_profile_teacher_price_tv_title_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="показать описание..."
            app:layout_constraintTop_toBottomOf="@id/id_item_profile_teacher_price_et_name"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:minHeight="45dp"
            android:visibility="gone"
            android:textColorHint="#313331"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:id="@+id/id_item_profile_teacher_price_et_desc"
            app:layout_constraintTop_toBottomOf="@id/id_item_profile_teacher_price_tv_title_desc"
            app:layout_constraintStart_toStartOf="@id/id_item_profile_teacher_price_et_name"
            app:layout_constraintEnd_toEndOf="@id/id_item_profile_teacher_price_et_price"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>